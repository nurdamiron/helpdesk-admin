{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install --legacy-peer-deps --force",
        "buildCommand": "./vercel-build.sh",
        "nodeVersion": "18.x",
        "outputDirectory": "build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "env": {
    "REACT_APP_API_URL": "https://helpdesk-backend-ycoo.onrender.com/api"
  }
}